# Folder Shorcuts Mode

set $mode_folders Open Folder:(1) Pictures,(2) Downloads,(3) UTN,(4) Desktop,(5) Dropbox,(6) Music,(7) Documents,(8) Videos

#(1) Pictures,
#(2) Downloads,
#(3) UTN,
#(4) Desktop,
#(5) Dropbox,
#(6) Music,
#(7) Documents,
#(8) Videos


bindsym $mod+Shift+m mode "$mode_folders"

mode "$mode_folders" {
        bindsym 2      exec thunar ~/Downloads  ; mode "default"
        bindsym 1      exec thunar ~/Pictures   ; mode "default"
        bindsym 3      exec thunar ~/UTN    ; mode "default"
        bindsym 4      exec thunar ~/Desktop    ; mode "default"
        bindsym 5      exec thunar ~/Dropbox    ; mode "default"
        bindsym 6      exec thunar ~/Music  ; mode "default"
        bindsym 7      exec thunar ~/Documents  ; mode "default"
        bindsym 8      exec thunar ~/Videos ; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}


# Launch mode, one app per key.
set $mode_launch Launch:(A)tom,(E)clipse,(D)iscord,(T)elegram,(G)itkraken
bindsym $mod+Shift+d mode "$mode_launch"

mode "$mode_launch" {
    bindsym a exec --no-startup-id atom
    bindsym e exec --no-startup-id eclipse
    bindsym d exec --no-startup-id discord
    bindsym t exec --no-startup-id telegram-desktop
    bindsym g exec --no-startup-id gitkraken

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
